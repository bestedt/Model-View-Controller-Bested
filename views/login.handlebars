<!-- login.html -->
<h2>Login</h2>

<form class="form login-form" id="loginForm">
  <div class="form-group">
    <label for="email-login">Email:</label>
    <input class="form-input" type="text" id="email-login" name="email" required />
  </div>
  <div class="form-group">
    <label for="password-login">Password:</label>
    <input class="form-input" type="password" id="password-login" name="password" required />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit" id="loginBtn">Login</button>
  </div>
</form>

<h2>Create Account</h2>

<form class="form create-account-form" id="createAccountForm">
  <div class="form-group">
    <label for="email-create">Email:</label>
    <input class="form-input" type="text" id="email-create" name="email" required />
  </div>
  <div class="form-group">
    <label for="password-create">Password:</label>
    <input class="form-input" type="password" id="password-create" name="password" required />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="button" id="createAccountBtn">Create Account</button>
  </div>
</form>

<script src="/js/login.js"></script>
